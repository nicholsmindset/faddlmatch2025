{
  "name": "@faddl/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:deps && next build",
    "build:deps": "cd ../../packages/types && npm run type-check && cd ../api-client && npm run build && cd ../ai-integration && npm run build",
    
    "netlify:install:web": "echo \"📦 Installing web app dependencies with workspace resolution\" && npm install --legacy-peer-deps --include-workspace-root",
    "netlify:build": "npm run netlify:verify:workspace && npm run netlify:install:web && npm run build",
    "netlify:verify:workspace": "echo \"🔍 Verifying workspace packages are built\" && test -f ../../packages/api-client/dist/index.js && test -f ../../packages/ai-integration/dist/index.js && echo \"✅ Workspace packages ready\"",
    "netlify:debug:deps": "echo \"🔍 Debugging dependency resolution\" && npm list --depth=0 | head -20 && echo \"\nCritical deps check:\" && ls -la node_modules/@faddl* 2>/dev/null || echo \"Workspace deps not found\" && ls -la node_modules/tailwindcss 2>/dev/null || echo \"TailwindCSS not found\"",
    
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "clean": "rm -rf .next"
  },
  "dependencies": {
    "@faddl/types": "file:../../packages/types",
    "@faddlmatch/api-client": "file:../../packages/api-client",
    "@faddl-match/ai-integration": "file:../../packages/ai-integration",
    "@clerk/nextjs": "^5.3.3",
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.17.0",
    "@types/stripe": "^8.0.416",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.2.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.309.0",
    "next": "15.1.2",
    "openai": "^4.24.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-intersection-observer": "^9.5.3",
    "socket.io-client": "^4.7.4",
    "sonner": "^2.0.7",
    "stripe": "^18.4.0",
    "svix": "^1.15.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.1.2",
    "jest": "^29.7.0",
    "playwright": "^1.54.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
